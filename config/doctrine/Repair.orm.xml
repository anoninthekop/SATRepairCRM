<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="App\Repository\RepairRepository" name="App\Entity\Repair" table="repair">
    <id name="id" type="uuid" column="id"/>
    <field name="code" column="code" length="13" unique="true"/>
    <field name="imei" type="integer" column="imei" nullable="true"/>
    <field name="pattern" column="pattern" length="20" nullable="true"/>
    <field name="fault" column="fault" length="85"/>
    <field name="colour" column="colour" length="50" nullable="true"/>
    <field name="privateComment" column="private_comment" length="200" nullable="true"/>
    <field name="publicComment" column="public_comment" length="200" nullable="true"/>
    <field name="visible" type="integer" column="visible" length="50"/>
    <field name="modified" type="datetime" column="modified" nullable="true"/>
    <field name="created" type="datetime_immutable" column="created"/>
    <one-to-many field="products" target-entity="App\Entity\RepairHasProducts" mapped-by="repair" orphan-removal="true" fetch="EAGER">
      <cascade>
        <cascade-persist/>
        <cascade-remove/>
      </cascade>
    </one-to-many>
    <many-to-one field="customer" target-entity="App\Entity\Customer">
      <cascade>
        <cascade-persist/>
      </cascade>
      <join-columns>
        <join-column name="customer_id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="category" target-entity="App\Entity\Category">
      <cascade>
        <cascade-persist/>
      </cascade>
      <join-columns>
        <join-column name="category_id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="status" target-entity="App\Entity\Status">
      <cascade>
        <cascade-persist/>
      </cascade>
      <join-columns>
        <join-column name="status_id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
