<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="App\Repository\RepairRepository" name="App\Entity\Repair" table="repair">
    <id name="id" type="uuid" column="id"/>
    <field name="code" type="string" column="code" length="16" precision="0" scale="0" unique="true" nullable="false"/>
    <field name="imei" type="integer" column="imei" precision="0" scale="0" nullable="true"/>
    <field name="pattern" type="string" column="pattern" length="20" precision="0" scale="0" nullable="true"/>
    <field name="fault" type="string" column="fault" length="85" precision="0" scale="0" nullable="false"/>
    <field name="colour" type="string" column="colour" length="50" precision="0" scale="0" nullable="true"/>
    <field name="privateComment" type="string" column="private_comment" length="200" precision="0" scale="0" nullable="true"/>
    <field name="publicComment" type="string" column="public_comment" length="200" precision="0" scale="0" nullable="true"/>
    <field name="labourPrice" type="integer" column="labour_price" precision="0" scale="0" nullable="true"/>
    <field name="tax" type="integer" column="tax" precision="0" scale="0" nullable="true"/>
    <field name="visible" type="integer" column="visible" length="50" precision="0" scale="0" nullable="false"/>
    <field name="modified" type="datetime" column="modified" precision="0" scale="0" nullable="false"/>
    <field name="created" type="datetime_immutable" column="created" precision="0" scale="0" nullable="false"/>
    <one-to-many field="products" target-entity="App\Entity\RepairHasProducts" mapped-by="repair" orphan-removal="true" fetch="EAGER">
      <cascade>
        <cascade-remove/>
      </cascade>
    </one-to-many>
    <many-to-one field="customer" target-entity="App\Entity\Customer" fetch="EAGER">
      <cascade>
        <cascade-persist/>
      </cascade>
      <join-columns>
        <join-column name="customer_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="category" target-entity="App\Entity\Category" fetch="EAGER">
      <cascade>
        <cascade-persist/>
      </cascade>
      <join-columns>
        <join-column name="category_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="status" target-entity="App\Entity\Status" fetch="EAGER">
      <cascade>
        <cascade-persist/>
      </cascade>
      <join-columns>
        <join-column name="status_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
