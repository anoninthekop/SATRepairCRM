<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="App\Repository\UserRepository" name="App\Entity\User" table="user">
    <id name="id" type="uuid" column="id"/>
    <field name="username" column="username" length="15" unique="true"/>
    <field name="email" column="email" length="70" nullable="true"/>
    <field name="password" column="password" length="100"/>
    <field name="lastSession" type="datetime" column="last_session" nullable="true"/>
    <field name="modified" type="datetime" column="modified" nullable="true"/>
    <field name="created" type="datetime_immutable" column="created"/>
  </entity>
</doctrine-mapping>
