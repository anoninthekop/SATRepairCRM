{% extends 'base.html.twig' %}

{% block title %}{{ 'Repair index'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'Repair index'|trans }}</h1>

    <table class="table">
        <thead>
        <tr>
            <th>{{ 'Id'|trans }}</th>
            <th>{{ 'Products'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for repair in repairs %}
            <tr>
                <td>{{ repair.id }}</td>
                <td>{{ repair.products.count }}</td>
                <td>
                    <a href="{{ path('repair_show', {'id': repair.id}) }}">{{ 'Show'|trans }}</a>
                    <a href="{{ path('repair_edit', {'id': repair.id}) }}">{{ 'Edit'|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">{{ 'No records found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('repair_new') }}">{{ 'Create new'|trans }}</a>
{% endblock %}
