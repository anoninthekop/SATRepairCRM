{% extends 'base.html.twig' %}

{% block title %}Repair index{% endblock %}

{% block body %}
    <h1>Repair index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
        </tr>
        </thead>
        <tbody>
        {% for repair in repairs %}
            <tr>
                <td>{{ repair.id }}</td>
                <td>
                    <a href="{{ path('repair_show', {'id': repair.id}) }}">show</a>
                    <a href="{{ path('repair_edit', {'id': repair.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('repair_new') }}">Create new</a>
{% endblock %}
